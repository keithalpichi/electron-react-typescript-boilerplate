{
  "compilerOptions": {
    "allowJs": true,
    "module": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "."
    ],
    "types": []
  },
  "include": [
    "src/**/*"
  ]
}
